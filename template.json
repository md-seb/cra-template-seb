{
  "package": {
    "dependencies": {
      "@testing-library/dom": "^7.22.6",
      "@testing-library/jest-dom": "^5.11.0",
      "@testing-library/react": "^10.4.3",
      "@testing-library/user-event": "^12.0.11",
      "eslint": "^6.8.0",
      "eslint-config-prettier": "^6.11.0",
      "eslint-plugin-jest": "^23.20.0",
      "eslint-plugin-prettier": "^3.1.4",
      "eslint-plugin-react": "^7.20.6",
      "eslint-plugin-react-hooks": "^4.1.0",
      "prettier": "^2.1.1",
      "source-map-explorer": "^2.5.0",
      "web-vitals": "^0.2.2"
    },
    "eslintConfig": {
      "extends": "react-app"
    },
    "scripts": {
      "build": "npm run format && npm run lint && react-scripts build",
      "test": "npm run format && npm run lint && react-scripts test",
      "analyze": "source-map-explorer 'build/static/js/*.js'",
      "format": "prettier --config .prettierrc.js 'src/**/*.(js|jsx|css)' --write",
      "lint": "eslint --config .eslintrc.js --ext .js,.jsx --quiet src/",
      "lint-fix": "eslint --config .eslintrc.js --ext .js,.jsx --fix src/"
    }
  }
}
